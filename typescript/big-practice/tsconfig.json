{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/example-nested"],
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": "./dist"
  }
}
